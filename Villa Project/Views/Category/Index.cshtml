@model List<Category>

@{ var counter = 1; }
<div>
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Delete</th>
                the
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <th scope="row">@counter</th>
                    <td>@category.Id</td>
                    <td>@category.CategoryName</td>

                    <td><a asp-contorller="category" asp-action="delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a></td>
                    <td><a asp-contorller="category" asp-action="edit" asp-route-id="@category.Id" class="btn btn-primary">Edit</a>
                </tr>
                counter++;
            }
            )
            <tr>
                <th scope="row">1</th>
                <td>Mark</td>
                <td>Otto</td>

            </tr>

        </tbody>

    </table>
    <div class="container">
        <nav aria-label="Page navigation example" sytle ="display:flex ; justify-content: center;" >
        <ul class="pagination">
            @for(int i = 1; i<= ViewBag.TotalPages; i++)
            {
                 <li class="page-item @(ViewBag.CurrentPage <=1 ? "disabled" : "")"><a class="page-link" asp-action="Index" asp-route-page = "@( ViewBag.TotalPages - 1)"  style="color: orangered=">Previous</a></li>
            <li class="page-item"><a class="page-link"asp-action="Index" asp-route-page="@i">@i</a></li>
           
            <li class="page-item @(ViewBag.CurrentPage >= ViewBag.TotalPages ? "disabled" : "")"><a class="page-link" asp-action="Index" asp-route-page = "@( ViewBag.TotalPages +1)" style="color: orangered=">Next</a></li>
            }
        </ul>
    </nav>

    <button>
        <a asp-controller="category" asp-action="create" class="btn btn-success" style="float:right">Categroy Create</a>
    </button>
    </div>
</div>